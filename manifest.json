{
  "manifest_version": 3,
  "name": "내 첫 확장 프로그램",
  "version": "1.0",
  "description": "간단한 크롬 확장 프로그램",
  "action": {
    "default_popup": "static/html/popup.html",
    "default_icon": {
      "16": "static/image/icon16.png",
      "48": "static/image/icon48.png",
      "64": "static/image/icon64.png",
      "128": "static/image/icon128.png"
    }
  },
  "content_security_policy": { "extension_pages": "script-src 'self'; style-src 'self'; img-src 'self' data: *; object-src 'self'" }
}